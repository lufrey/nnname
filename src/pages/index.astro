---
import words from "../components/words";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Welcome to Astro.">
  <main class="m-auto p-6 flex justify-center items-center h-screen">
    <h1 class="text-center text-5xl m-0 font-extrabold">
      <span
        id="alliteration"
        class="bg-clip-text [-webkit-text-fill-color:_transparent] from-purple-500 to-pink-500 bg-gradient-to-tr"
        >Astro</span
      >-Maja
    </h1>
  </main>
</Layout>
<script define:vars={{ words }}>
  const randomElement = words[Math.floor(Math.random() * words.length)];
  const alliteration = document.getElementById("alliteration");
  alliteration && (alliteration.innerText = randomElement);
</script>
